{
    "extends": "./tsconfig-paths.json",
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "baseUrl": "./"
    },
    "ts-node": {
      // Do not forget to `npm i -D tsconfig-paths`
      "require": ["tsconfig-paths/register"]
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}